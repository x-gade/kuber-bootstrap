[Unit]
Description=Slice for kubelet and its child pods
Documentation=https://www.freedesktop.org/wiki/Software/systemd

[Slice]
CPUAccounting=true
MemoryAccounting=true
{% if kubelet_memory_limit %}
MemoryMax={{ kubelet_memory_limit }}
{% else %}
MemoryMax=infinity
{% endif %}
{% if kubelet_tasks_max %}
TasksMax={{ kubelet_tasks_max }}
{% endif %}

