k8sServiceHost: {{ IP }}
k8sServicePort: 6443

cni:
  install: true
  customConf: false
  binPath: /opt/cni/bin
  confPath: /etc/cni/net.d
  chainingMode: ""

ipam:
  mode: kubernetes

routingMode: native
ipv4NativeRoutingCIDR: {{ CLUSTER_POD_CIDR }}
ipv4:
  enabled: true
ipv6:
  enabled: false

kubeProxyReplacement: false
socketLB:
  enabled: true
hostServices:
  enabled: true
externalIPs:
  enabled: true
nodePort:
  enabled: true
  enableHealthCheck: false
hostPort:
  enabled: true

enableIPv4Masquerade: true

hubble:
  enabled: false

nodeinit:
  enabled: false

operator:
  enabled: true
  replicas: {{ OPERATOR_REPLICAS }}
  rollOutPods: true

l7Proxy: false

enablePrometheusMetrics: false

endpointRoutes:
  enabled: false

meshAuth:
  enabled: false

clustermesh:
  apiserver:
    service:
      externalTrafficPolicy: Cluster
      internalTrafficPolicy: Cluster

bpf:
  datapathMode: veth
  distributedLRU:
    enabled: true
  mapDynamicSizeRatio: 0.08
bpfClockProbe: true

labels: "io\\.kubernetes\\.pod\\.namespace app"

imagePullSecrets: []

containerSecurityContext:
  privileged: true
  capabilities:
    add:
      - IPC_LOCK

extraConfig:
  ca.crt: |
{{ ca_crt.strip() | indent(4, True) }}


